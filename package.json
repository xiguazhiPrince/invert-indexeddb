{
  "name": "invert-indexeddb",
  "version": "1.0.0-0",
  "description": "A full-text search SDK based on inverted index algorithm using IndexedDB",
  "main": "dist/index.js",
  "module": "dist/invert-indexeddb.esm.js",
  "browser": "dist/invert-indexeddb.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "prebuild": "npm run format",
    "build": "tsc",
    "build:bundle": "rollup -c",
    "build:all": "npm run build && npm run build:bundle",
    "build:prod": "cross-env NODE_ENV=production npm run build:all",
    "test": "jest",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "indexeddb",
    "inverted-index",
    "full-text-search",
    "search",
    "tokenizer"
  ],
  "author": "xigua",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.7.4",
    "rollup": "^4.18.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xiguazhiPrince/invert-indexeddb.git"
  }
}
